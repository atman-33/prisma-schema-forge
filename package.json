{
  "name": "prisma-schema-forge",
  "version": "0.1.3",
  "description": "Forge multiple artifacts from your Prisma schema models",
  "author": "atman-33",
  "license": "MIT",
  "keywords": [
    "prisma",
    "template-engine",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atman-33/prisma-schema-forge.git"
  },
  "homepage": "https://github.com/atman-33/prisma-schema-forge",
  "bin": {
    "prisma-schema-forge": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "npx eslint . --fix",
    "build": "tsc",
    "start": "node dist/index.js",
    "---- COMMAND SECTION ----": "----",
    "init": "npm run build && npm run start init",
    "templates": "npm run build && npm run start templates",
    "generate": "npm run build && npm run start generate",
    "---- TEST SECTION ----": "----",
    "test": "jest",
    "test:watch": "jest --watch",
    "---- CI SECTION ----": "----",
    "ci:lint": "npm run lint",
    "ci:build": "npm run build",
    "ci:test": "npm run test"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "inflection": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  }
}
